
@{
    ViewData["Title"] = "Add car";
}
<h1>Add Car</h1>
<form method="POST" action="AddCar">
    <div class="form-group">
        <label for="carMake">Car make</label>
        <input id="carMake" name="carMake" type="Text" />
    </div>
    <div class="form-group">
        <label for="carModel">Car model</label>
        <input id="carModel" name="carModel" type="Text" />
    </div>
    <div class="form-group">
        <label for="carYear">Car year</label>
        <input id="carYear" name="carYear" type="Text" />
    </div>
    <div class="form-group">
        <label for="carPictureURL">Car picture URL</label>
        <input id="carPictureURL" name="carPictureURL" type="Text" />
    </div>

    <input value="Save" type="Submit" class="btn btn-primary" />
</form>   